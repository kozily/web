  "dependencies": {
    "bootstrap-sass": "^3.3.7",
    "bootswatch-sass": "^3.2.0",
    "classnames": "^2.2.5",
    "codemirror": "^5.19.0",
    "font-awesome": "^4.6.3",
    "immutable": "^3.8.1",
    "nearley": "^2.7.3",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-hot-loader": "^3.0.0-beta.3",
    "react-json-tree": "^0.10.0"
  },
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.dev.js --hot --inline --host 0.0.0.0 --port 8080",
    "pretest": "eslint 'app/*.js' 'app/*.jsx' 'app/**/*.js' 'app/**/*.jsx'",
    "test": "karma start config/karma.js --single-run",
    "test:watch": "karma start config/karma.js --no-single-run",
    "build": "rm -rf ./build/* && NODE_ENV=production webpack --config config/webpack.prod.js --progress -p"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "airbnb"
    ],
    "env": {
      "browser": true,
      "jasmine": true
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "es2016",
      "es2017",
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  }
